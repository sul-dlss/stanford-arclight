<div class="col-md-12 col-lg-6">
  <div class="card h-100">
    <div class="card-body">
      <div class="row">
        <div class="d-none d-sm-block col-sm-4 col-xl-5">
          <%= image %>
        </div>
        <div class="col-12 col-sm-8 col-xl-7">
          <h3 class="card-title"><%= heading %></h3>
          <ul class="card-text">
            <% entries.each do |entry| %>
              <li><%= entry %></li>
            <% end %>
          </ul>
          <%= render LandingPage::LibraryHoursComponent.new(key:) %>
          <%= request_button %>
        </div>
      </div>
    </div>
  </div>
</div>
